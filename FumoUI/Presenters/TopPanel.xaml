<UserControl x:Class="FumoUI.Presenters.TopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FumoUI.Presenters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="LightGray">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <TabControl Grid.Row="0" ItemsSource="{Binding FileItems}" SelectedItem="{Binding FileSelected}" Height="50" />

            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Height="50">
                <Button
                    Content="Circle" Margin="10" Padding="10,5" Click="DrawCircle_Click" Height="30" />
                <Button
                    Content="Save" Margin="10" Padding="10,5" Click="Save_Click" Height="30" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

