<UserControl x:Class="FumoUI.Presenters.TopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FumoUI.Presenters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="LightGray">
        <StackPanel Orientation="Horizontal">
            <Button Content="Undo" Margin="10" Click="Undo_Click" />
            <Button Content="Redo" Margin="10" Click="Redo_Click" />
            <Button Content="Circle" Margin="10" Click="DrawCircle_Click" />
        </StackPanel>
    </Border>
</UserControl>
