<Window x:Class="FumoUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FumoUI"
        mc:Ignorable="d"
        xmlns:usercontrols="clr-namespace:FumoUI.Presenters"
        d:ResizeMode="NoResize"
        Title="MainWindow" Height="900" Width="1600">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2c2d2f" Offset="0"/>
            <GradientStop Color="black" Offset="2"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <usercontrols:TopPanel Grid.Row="0"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <usercontrols:LeftSide Grid.Column="0"/>
            <Border Grid.Column="1" Panel.ZIndex="1" x:Name="hostContainer" Margin="10" BorderBrush="White" />
        </Grid>
    </Grid>
</Window>

